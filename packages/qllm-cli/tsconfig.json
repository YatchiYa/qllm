{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ES2018", "ES2019.Array", "ES2020.Promise", "ES2020.BigInt", "ES2020.String"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "luncher/*"],
      "@qllm-core/*": ["../qllm-core/src/*"]
    }
  },
    "ts-node": {
  "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*", "luncher/**/*", "../qllm-core/src/common/utils/stream_helper.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}