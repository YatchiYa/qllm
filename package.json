{
  "name": "qllm-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "docs:generate": "typedoc",
    "docs:serve": "npx http-server docs/api",
    "lint": "eslint 'packages/**/*.ts'",
    "lint:fix": "eslint 'packages/**/*.ts' --fix",
    "format": "prettier --write 'packages/**/*.ts'",
    "format:check": "prettier --check 'packages/**/*.ts'",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "dev-cli": "npm run dev-cli -w qllm --",
    "dev-chat": "npm run dev-cli -w qllm -- chat",
    "dev-ask": "npm run dev-cli -w qllm -- ask",
    "dev-stream": "npm run dev-cli -w qllm -- stream",
    "start": "npm run start --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "@types/cli-spinner": "^0.2.3",
    "@types/js-yaml": "^4.0.9",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lerna": "^8.1.8",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.26.5",
    "typedoc-plugin-markdown": "^4.2.3",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "@anthropic-ai/bedrock-sdk": "^0.10.1",
    "@mistralai/mistralai": "^0.5.0",
    "axios": "^1.7.4",
    "body-parser": "^1.20.2",
    "cli-spinner": "^0.2.10",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fast-xml-parser": "^4.4.0",
    "glob": "^10.4.2",
    "groq-sdk": "^0.5.0",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "lru-cache": "^10.3.0",
    "morgan": "^1.10.0",
    "ollama": "^0.5.2",
    "openai": "^4.52.2",
    "perplexity-sdk": "^1.0.4",
    "prompts": "^2.4.2",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
